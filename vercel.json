{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "pwa/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "dashboard/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/admin/assets/(.*)",
      "dest": "/dashboard/dist/assets/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/pwa/dist/assets/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/pwa/dist/manifest.webmanifest"
    },
    {
      "src": "/registerSW.js",
      "dest": "/pwa/dist/registerSW.js"
    },
    {
      "src": "/sw.js",
      "dest": "/pwa/dist/sw.js"
    },
    {
      "src": "/workbox-(.*)",
      "dest": "/pwa/dist/workbox-$1"
    },
    {
      "src": "/pwa-192x192.png",
      "dest": "/pwa-192x192.png"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/dashboard/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/pwa/dist/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
}
